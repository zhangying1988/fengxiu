.container {
    box-sizing: border-box;
    background: #fff;
    max-height: 1000rpx;
    min-height: 700rpx;
    margin-bottom: 100rpx;

}
.inner-container{
    padding:30rpx 30rpx 0 30rpx;
}

.sku-img {
    width: 160rpx;
    height: 160rpx;
}

.sku-preview {
    display: flex;
    flex-direction: row;
}

.sku-description {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-left: 40rpx;
}

.title {
    font-size: 28rpx;
    color: #999;
}

.price-row {
    display: flex;
    flex-direction: row;
    justify-content: baseline;
}

.price-ds {
    display: flex !important;
    flex-direction: row !important;
    justify-content: baseline;
    line-height: 36rpx !important;
}

.price-unit {
    color: #157658 !important;
    font-size: 28rpx !important;
    line-height: 36rpx !important;
}

.price-value {
    color: #157658 !important;
    font-size: 36rpx !important;
}

.price-discount-value {
    font-size: 24rpx !important;
}

.discount-price {
    margin-left: 20rpx;
}

.sku-pending {
    font-size: 20rpx;
}

.sku-pending > text:first-child {
    color: #999;
}

.sku-pending > text:nth-child(2) {
    color: #666;
}

.hr {
    width: 690rpx;
    margin-top: 30rpx;
    height: 2rpx;
    background: #e9e9e9;
}

.stock {
    margin-left: 30rpx;
    font-size: 20rpx;
    color: #999;
    display: flex;
    margin-top: 40rpx;
}

.stock-pinch {
    margin-left: 30rpx;
    font-size: 20rpx;
    color: #d20109;
    display: flex;
    margin-top: 40rpx;
}

.counter-container {
    margin-top: 34rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding-bottom: 200rpx;
}

.bottom-btn {
    display: flex;
    flex-direction: row;
    background: #333;
    color: #fff;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    justify-content: center;
    position: fixed;
    bottom: 0;
}

.out-stock {
    background: #999;

}