.container{
    border: 2rpx solid #333;
    padding: 2rpx;
    box-sizing: border-box;
    height: 60rpx;
}
.inner-container {
    height: 100%;
    padding: 0 15rpx;
    display:flex;
    flex-direction:row;
    align-items: center;
    background: #ffffff;
    font: 24rpx;
}
.forbidden{
    border:2px dashed #bbb;
    color: #bbb;
}
.s-outer{
    border: 2px solid #157658;
}
.s-inner{
    background: #157658;
    color: #fff;
}
.img{
    display: flex;
    width: 44rpx;
    height: 44rpx;
    margin-right: 10rpx;
}