<view class="container">
    <view class="icons">
        <view bind:tap="onGoToHome">
            <l-icon name="home" size="46" l-class="sleeve" color="#157658"></l-icon>
            <text>首页</text>
        </view>
        <view bind:tap="onGoToCart">
            <l-badge value="7777" max-count="100">
                <l-icon name="cart" size="44" color="#157658"></l-icon>
            </l-badge>
            <text>购物车</text>
        </view>
    </view>
    <view bind:tap="onAddToCart" class="cart btn-font">加入购物车</view>
    <view bind:tap="onBuy" class="buy btn-font">立即购买</view>
</view>