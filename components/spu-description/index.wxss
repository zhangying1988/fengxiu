.container{
    width: 100%;
    box-sizing: border-box;
    background: #fff;
    padding: 34rpx 30rpx 25rpx 30rpx;
    display:flex;
    flex-direction:row;
    justify-content: space-between;
}
.tags{
    display:flex;
    flex-direction:row;
}
l-tag{
    margin-right: 6rpx!important;
}
.left{
    flex: 1;
    display:flex;
    flex-direction:column;
}
.subtitle{
    color: #999;
    font-size: 28rpx;
    font-weight: 400;
    margin-top: 40rpx;
    margin-bottom: 16rpx;
    
}
.discount-tag{
    position: relative!important;
    bottom: -15rpx;
    width: 50rpx;
    border-radius: 20rpx!important;
    margin-left: 80rpx;
}
.price-row{
    display:flex;
    /*align-items: baseline;*/
    flex-direction:row;
}
.price-ds {
    display: flex !important;
    flex-direction: row !important;
    line-height: 24rpx;
}

.price-unit {
    color: #157658 !important;
    font-size: 24rpx;
    line-height: 24rpx;
}

.price-value {
    color: #157658 !important;
    font-size: 28rpx;
    line-height: 24rpx;
}
.discount-price{
    margin-left: 20rpx;
    color: #999!important;
}
.right{
    margin-left: 20rpx;
    display:flex;
    flex-direction:row;
    justify-content: flex-end;
    width: 78rpx;
    height: 120rpx;
    border-left: 2px dashed #f5f5f5;
}
.inner{
    display:flex;
    flex-direction:column;
    align-items: center;
    justify-content: center;
    background: #DECBE6;
    width: 50rpx;
    height: 120rpx;
}
.inner text{
    color: #157658;
    font-size: 20rpx;
}